<h1>Create a onetime note</h1>

<%= render partial: "giphy" %>

<%= simple_form_for @page, html: {multipart: true} do |f| %>
  <%= f.input :message, label: false, placeholder: "your onetime note here..." %>
  <div class="preview-box">
    <p>your onetime note preview here...</p>
  </div>

  <div class="optional-fields hidden">
    <%= f.input :duration, input_html: { value: 7, max: 10, min: 1 } %>
    <%= f.input(
      :url_key,
      as: :string,
      placeholder: "url-key-example",
      label: "Specify url: #{root_url + @page.url_key}"
    ) %>
    <%= f.input :require_password %>
    <%= f.input :password %>
    <%= f.simple_fields_for :photos do |photo_form| %>
      <%= photo_form.input :avatar, as: :file %>
    <% end %>
  </div>

  <%= f.button :submit, "Create Note" %>
  <button id="more-options">More Options</button>
<% end %>

<%= simple_form_for :photo, { remote: true } do |f| %>
  <%= f.input :avatar, as: :file %>
<% end %>
